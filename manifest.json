{
	"name": "Reader Mode",
	"version": "1.3.2",
	"description": "- Activates wasd-scrolling on every website\n- Makes the New Tab page empty and grey\n- Disables some BlockAdBlock scripts",
	"permissions": [
		"activeTab",
		"storage",
		"tabs"
	],
	"background": {
		"scripts": [
			"init.js"
		],
		"persistent": false
	},
	"chrome_url_overrides": {
		"newtab": "newtab.html"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"readerMode.js"
			]
		}
	],
	"options_page": "options.html",
	"browser_action": {
		"default_popup": "popup.html"
	},
	"manifest_version": 2
}