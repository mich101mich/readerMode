{
	"name": "Reader Mode",
	"version": "1.2.1",
	"description": "Activates wasd-scrolling on every website. Also makes a New Tab page empty and slightly darker.",
	"permissions": [
		"activeTab",
		"storage",
		"tabs"
	],
	"background": {
		"scripts": [
			"init.js"
		],
		"persistent": false
	},
	"chrome_url_overrides": {
		"newtab": "newtab.html"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"readerMode.js"
			]
		}
	],
	"options_page": "options.html",
	"browser_action": {
		"default_popup": "popup.html"
	},
	"manifest_version": 2
}